<Window x:Class="StemSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StemSchool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
         <!-- Текстовые поля -->
        <TextBox Name="ProxyTextBox" Text="10.0.50.52" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Margin="20,20,0,0" Width="200" />
        
        <TextBox Name="PortTextBox" Text="3128" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Margin="20,60,0,0" Width="200"/>
        
        <!-- Кнопки -->
        <Button Name="ApplyProxyBtn" Content="Применить Прокси" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="23,100,0,0" Width="100" Click="SetProxy"/>
        
        <Button Name="ApplyCertBtn" Content="Установить сертификат" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="140,100,0,0" Width="100" Click="Button2_Click"/>
        
        <Button Name="GitHubBtn" Content="Мой GitHub" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="20,140,0,0" Width="100" Click="Button3_Click"/>
        
        <Button Name="ExitBtn" Content="Закрыть программу" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="140,140,0,0" Width="100" Click="Button4_Click"/>

    </Grid>
</Window>
